@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="d-flex justify-content-center align-items-center"
         style="height: 100vh; background-color: #f8f9fa;">
        <div class="shadow p-4 rounded"
             style="width: 100%; max-width: 500px; background-color: white;">
            <h2 class="text-center mb-4">Login</h2>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input id="Email"
                           name="Email"
                           type="email"
                           class="form-control"
                           required
                           style="height: 40px; font-size: 0.9rem;" />
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input id="Password"
                           name="Password"
                           type="password"
                           class="form-control"
                           required
                           style="height: 40px; font-size: 0.9rem;" />
                </div>

                <div class="d-grid">
                    <button type="submit"
                            class="btn btn-primary btn-lg"
                            style="font-size: 1.2rem; padding: 10px 20px; margin-top: 40px;">
                        Login
                    </button>
                </div>
@*                 <div class="d-grid mt-3">
                    <button type="button"
                            onclick="location.href='@Url.Action("Index", "Home")'"
                            class="btn btn-secondary"
                            style="font-size: 1.2rem; padding: 10px 20px;">
                        Return
                    </button>
                </div> *@
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <p style="font-size: 0.9rem; margin: 0;">Don't have an account?</p>
                    <a href="@Url.Action("Register", "Auth")"
                       class="btn btn-link"
                       style="font-size: 0.9rem; text-decoration: none; padding: 0;">
                        Sign Up Here
                    </a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
