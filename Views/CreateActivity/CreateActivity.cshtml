@model TravelApp.Models.ViewModels.CreateActivityViewModel

@{
    ViewBag.Title = "Create Activity";
}

<h2>Create Activity</h2>

<form asp-action="CreateActivity" asp-area="AdminPanel" asp-controller="CreateActivity" method="post">
    <div style="display: flex; flex-direction: column; gap: 40px; margin-top: 50px; margin-bottom: 40px;">

        <!-- Name -->
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" required />
            @Html.ValidationMessageFor(model => model.Name, "Activity name cannot be null.", new { @class = "text-danger" })
        </div>

        <!-- Type -->
        <div class="form-group">
            <label asp-for="Type"></label>
            <input asp-for="Type" type="text" class="form-control" required />
            @Html.ValidationMessageFor(model => model.Type, "Type cannot be null.", new { @class = "text-danger" })
        </div>

        <!-- Date -->
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="date" class="form-control" />
            @Html.ValidationMessageFor(model => model.Date, null, new { @class = "text-danger" })
        </div>

        <!-- Price -->
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            @Html.ValidationMessageFor(model => model.Price, "Price must be a valid number.", new { @class = "text-danger" })
        </div>

        <!-- Requires Reservation -->
        <div class="form-group">
            <label asp-for="Requires_Reservation"></label>
            <input asp-for="Requires_Reservation" type="checkbox" class="form-check-input" />
            @Html.ValidationMessageFor(model => model.Requires_Reservation, null, new { @class = "text-danger" })
        </div>

        <!-- Destinations Selection -->
        <div class="form-group">
            <label asp-for="DestinationIDs">Destinations</label>
            <select asp-for="DestinationIDs" asp-items="Model.Destinations" class="form-control" multiple>
                <!-- Multiple selections allowed -->
            </select>
            @Html.ValidationMessageFor(model => model.DestinationIDs, null, new { @class = "text-danger" })
        </div>

        <!-- Accommodations Selection -->
        <div class="form-group">
            <label asp-for="AccommodationIDs">Accommodations</label>
            <select asp-for="AccommodationIDs" asp-items="Model.Accommodations" class="form-control" multiple>
                <!-- Multiple selections allowed -->
            </select>
            @Html.ValidationMessageFor(model => model.AccommodationIDs, null, new { @class = "text-danger" })
        </div>
    </div>

    <!-- Submit and Return Buttons -->
    <button type="submit" class="btn btn-success">Create</button>
    <button type="button" onclick="location.href='@Url.Action("ListActivities", "AdminPanel")'" class="btn btn-secondary">Return</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
