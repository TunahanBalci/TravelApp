@model IEnumerable<TravelApp.Models.City>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost_Of_Living)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Climate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Terrain)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost_Of_Living)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Climate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Terrain)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.City_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.City_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.City_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
